{# filepath: templates/book/detail.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <title>Détail du livre</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }
        .book-detail {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            max-width: 600px;
            width: 100%;
            text-align: center;
        }
        .book-detail img {
            max-width: 100%;
            border-radius: 8px;
        }
        .book-detail h1 {
            margin: 16px 0;
            font-size: 2em;
        }
        .book-detail p {
            margin: 8px 0;
        }
        .back-link {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.2s;
        }
        .back-link:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="book-detail">
        <h1>{{ book.title }}</h1>
        <img src="/images/{{ book.image }}" alt="Image de {{ book.title }}">
        <p><strong>Auteur:</strong> {{ book.author }}</p>
        <p>{{ book.description }}</p>
        <a href="{{ path('book_list') }}" class="back-link">Retour à la liste des livres</a>
    </div>
</body>
</html>